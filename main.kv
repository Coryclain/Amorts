#:import WipeTransition kivy.uix.screenmanager.WipeTransition
#:include kv/welcome/welcome.kv
#:include kv/settingsscreen.kv
#:include kv/inventario/inventario.kv



<TTMain_ScreenManager>:
    Welcome:
    Wel_Registro:
    Wel_Login:
    Index:
    Inventario:


<Index>:
    id: iven_Screen
    name: "iven_Screen"

    NavigationLayout:
        id: nav_layout
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: app.title
                        elevation: 10
                        left_action_items: [["menu", lambda x: nav_drawer.set_state() ]]

                    ScreenManager:
                        id: screen_manager

                        Inventario:
                            id: inventario_db
                            name: "inventario_db"


                        SettingsScreen:
                            id: "settings_screen"
                            name: "settings_screen"



        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: 'vertical'
                padding: "8dp"
                spacing: "8dp"

                Image:
                    size_hint: None, None
                    size: "150dp", "150dp"
                    source: "imagenes/logott.png"

                ScrollView:
                    MDList:
                        #OneLineIconListItem:
                        #    text:
                        #   on_release:
                        #IconLeftWidget:

                        OneLineIconListItem:
                            text: "Inventario"

                            on_release:
                                screen_manager.current = "inventario_db"
                                nav_drawer.set_state()
                            IconLeftWidget:
                                icon: "view-dashboard"

                        OneLineIconListItem:
                            text: "Ajustes"
                            on_release:
                                screen_manager.current = "settings_screen"
                                nav_drawer.set_state()
                            IconLeftWidget:
                                icon: "settings"
