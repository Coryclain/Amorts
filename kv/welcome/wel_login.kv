
<Wel_Login>:
    id: wel_login
    name: 'wel_login'

    FloatLayout:
        MDToolbar:
            id: toolbar   
            elevation: 10
            pos_hint: {'top': 1}

        MDLabel:
            text:'¡Inicia sesión!'
            font_style: 'H5'
            theme_text_color: "Custom"
            text_color: 197, 205, 197, 1
            halign: 'center'
            pos_hint: {'center_y':0.80}
        
        MDTextField:
            id:email_text_fied
            pos_hint: {'center_x':0.5,'center_y':0.65}
            size_hint: (0.4,0.1)
            hint_text : 'email'
            helper_text: 'Required'
            helper_text_mode: 'on_error'
            icon_right: 'email'
            icon_right_color: app.theme_cls.primary_color
            required : True

        MDTextField:
            id:password_text_fied
            pos_hint: {'center_x':0.5,'center_y':0.55}
            size_hint: (0.4,0.1)
            hint_text : 'password'
            helper_text: 'Required'
            helper_text_mode: 'on_error'
            password: True
            icon_right: 'key'
            icon_right_color: app.theme_cls.primary_color
            required : True
        
        MDRoundFlatButton:
            text: "Login"
            pos_hint: {'center_x':0.5,'center_y':0.45}
            on_release:

        #boton para volver a resgistro
        MDRoundFlatButton:
            text: "Volver"
            pos_hint: {'center_x':0.5,'center_y':0.15}
            on_release: app.root.current = 'wel_registro'