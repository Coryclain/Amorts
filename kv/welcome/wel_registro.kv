#: include kv/welcome/wel_login.kv


<Wel_Registro>:
    id: wel_registro
    name: 'wel_registro'

    FloatLayout:
        MDToolbar:
            id: toolbar   
            elevation: 10
            pos_hint: {'top': 1}

        MDLabel:
            text:'¡Registrate!'
            font_style: 'H5'
            theme_text_color: "Custom"
            text_color: 197, 205, 197, 1
            halign: 'center'
            pos_hint: {'center_y':0.80}

        MDTextField:
            id: singup_User
            pos_hint: {'center_x':0.5,'center_y':0.65}
            size_hint: (0.4,0.1)
            hint_text : 'username'
            helper_text: 'Required'
            helper_text_mode: 'on_error'
            icon_right: 'account'
            icon_right_color: app.theme_cls.primary_color
            required : True
        
        MDTextField:
            id: singup_Email
            pos_hint: {'center_x':0.5,'center_y':0.55}
            size_hint: (0.4,0.1)
            hint_text : 'email'
            helper_text: 'Required'
            helper_text_mode: 'on_error'
            icon_right: 'email'
            icon_right_color: app.theme_cls.primary_color
            required : True

        MDTextField:
            id: singup_Pass
            pos_hint: {'center_x':0.5,'center_y':0.45}
            size_hint: (0.4,0.1)
            hint_text : 'password'
            helper_text: 'Required'
            helper_text_mode: 'on_error'
            password: True
            icon_right: 'key'
            icon_right_color: app.theme_cls.primary_color
            required : True

        MDRoundFlatButton:
            text: "Registrar"
            pos_hint: {'center_x':0.5,'center_y':0.35}
            on_release: root.regis(); app.root.current = 'iven_Screen'


        MDLabel:
            text:'¿Ya tienes una cuenta?'
            halign: 'center'
            pos_hint: {'center_y':0.20}
        
        MDRoundFlatButton:
            text: "Inicia sesión"
            pos_hint: {'center_x':0.5,'center_y':0.15}
            on_release: app.root.current = 'wel_login';

